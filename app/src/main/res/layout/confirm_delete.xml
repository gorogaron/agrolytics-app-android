<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/redTransparent"
    android:clickable="true">

    <TextView
        android:id="@+id/confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biztosan törölni szeretnéd ezt az elemet?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:textSize="40sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/confirm_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IGEN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:textColor="@color/darkGrey"
        app:layout_constraintBottom_toTopOf="@id/cancel_delete_btn"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/cancel_delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18dp"
        android:textColor="@color/darkGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>