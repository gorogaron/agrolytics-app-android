<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Megerősítés"
                android:textColor="@color/darkGrey"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/app_bar"
        android:background="@color/lightGrey">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"/>

        <RelativeLayout
            android:id="@+id/container_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_margin="24dp"
            android:background="@drawable/bg_white_round"
            android:elevation="2dp">

            <TextView
                app:fontFamily="@font/roboto"
                android:id="@+id/tv_correction"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/is_fill_correct_message"
                android:textColor="@color/darkGrey"
                android:textSize="20sp"
                android:padding="15dp"/>

            <TextView
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/btn_accept"
                android:text="Igen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_correction"
                android:layout_alignEnd="@+id/tv_correction"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                android:textSize="20sp"
                android:textColor="@color/darkGrey"
                android:padding="15dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

            <TextView
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/btn_decline"
                android:text="Nem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_correction"
                android:layout_alignStart="@+id/tv_correction"
                android:layout_margin="20dp"
                android:textSize="20sp"
                android:textColor="@color/darkGrey"
                android:padding="15dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_after_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="38sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"
                tools:text="5000.05 m3" />

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/logs_volume"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                app:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btn_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sum"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_show_session"
                android:background="@drawable/bg_dialog_button_clickable"
                android:padding="12dp"
                android:text="Új kép"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/darkGrey"/>

            <Button
                android:id="@+id/btn_show_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sum"
                app:layout_constraintStart_toEndOf="@id/btn_new"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_dialog_button_clickable"
                android:padding="12dp"
                android:text="Munkamenet áttekintése"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/darkGrey"
                android:backgroundTint="@color/yellow"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/container_declined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="24dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif"
                android:text="@string/more_declined" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>