<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGrey">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:text="Méréscsoport\náttekintése"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/darkGrey"/>

    <LinearLayout
        android:id="@+id/save"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/top_text"
        app:layout_constraintBottom_toBottomOf="@id/sum_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/location"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_save"
            app:tint="@color/darkGrey" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Befejezés"
            android:textColor="@color/mediumGrey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/save"
        app:layout_constraintBottom_toBottomOf="@id/save"
        app:layout_constraintEnd_toStartOf="@id/save"
        app:layout_constraintStart_toEndOf="@id/add"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_location"
            app:tint="@color/darkGrey" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Térkép"
            android:textColor="@color/mediumGrey" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/save"
        app:layout_constraintBottom_toBottomOf="@id/save"
        app:layout_constraintStart_toEndOf="@id/top_text"
        app:layout_constraintEnd_toStartOf="@id/location"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_add"
            app:tint="@color/darkGrey" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Új kép"
            android:textColor="@color/mediumGrey" />
    </LinearLayout>


    <TextView
        android:id="@+id/sum_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_text"
        app:layout_constraintStart_toStartOf="@id/top_text"
        android:layout_marginTop="25dp"
        android:text=""
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/darkGrey"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/sum_volume"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/lightGrey"/>

</androidx.constraintlayout.widget.ConstraintLayout>