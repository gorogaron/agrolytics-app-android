<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGrey">

    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:text="Folyamatban lévő\nmérés"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/darkGrey"/>


    <FrameLayout
        android:id="@+id/upload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toTopOf="@id/top_text"
        app:layout_constraintBottom_toBottomOf="@id/top_text"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:src="@drawable/ic_cloud_upload"
            app:tint="@color/darkGrey" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upload"
        app:layout_constraintStart_toStartOf="@id/upload"
        app:layout_constraintEnd_toEndOf="@id/upload"
        android:text="Feltöltés"
        android:textColor="@color/mediumGrey" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_margin="25dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top_text"
            android:background="@drawable/bg_white_round"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>